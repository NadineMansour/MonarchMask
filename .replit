args = "google-chrome --load-extension=$(pwd) --no-first-run --no-default-browser-check --user-data-dir=/tmp/chrome-profile --no-sandbox \"https://www.amazon.com\""

[deployment]
run = ["sh", "-c", "python -m http.server 5000"]
